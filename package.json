{
	"name": "scope-formatter-vsc",
	"displayName": "scope.formatter.vsc",
	"description": "Yet, just another extension for Visual Studio Code to format scope and mscope code.",
	"version": "0.0.2",
	"publisher": "MikeCoder",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:scope",
		"onLanguage:mscope"
	],
	"repository": "https://github.com/MikeCoder/vsc-scope-formatter",
	"main": "./src/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Scope Formatter",
			"properties": {
				"sql-formatter.uppercase": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Convert keywords to uppercase"
				},
				"sql-formatter.linesBetweenQueries": {
					"scope": "resource",
					"type": "number",
					"minimum": 1,
					"default": 2,
					"description": "Change number of linebreaks between queries"
				}
			}
		}
	},
	"dependencies": {
		"lodash": "^4.16.0"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}